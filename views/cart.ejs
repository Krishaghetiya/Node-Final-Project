<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Segoe UI", Arial, sans-serif;
    }

    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #667eea, #764ba2);
      padding: 40px;
    }

    h2 {
      text-align: center;
      color: #ffffff;
      margin-bottom: 25px;
    }

    .cart-box {
      max-width: 850px;
      margin: auto;
      background: #ffffff;
      padding: 25px;
      border-radius: 14px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.25);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background: #667eea;
      color: #ffffff;
      padding: 12px;
      font-size: 15px;
    }

    td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #eeeeee;
      font-size: 14px;
    }

    tr:last-child td {
      border-bottom: none;
    }

    .actions a {
      text-decoration: none;
      font-size: 14px;
      margin: 0 4px;
      padding: 6px 12px;
      border-radius: 6px;
      display: inline-block;
      color: #ffffff;
    }

    .plus {
      background: #4caf50;
    }

    .minus {
      background: #ff9800;
    }

    .remove {
      background: #f44336;
    }

    .summary {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 20px;
    }

    .total {
      font-size: 18px;
      font-weight: bold;
      color: #333333;
    }

    .back {
      text-decoration: none;
      background: #667eea;
      color: #ffffff;
      padding: 10px 16px;
      border-radius: 8px;
      font-weight: 600;
      transition: 0.3s;
    }

    .back:hover {
      background: #5563c1;
    }

    .empty {
      text-align: center;
      color: #777777;
      padding: 30px 0;
      font-size: 16px;
    }
  </style>

</head>
<body>

  <h2>Your Cart</h2>

  <div class="cart-box">

    <% if (cart.length === 0) { %>
      <div class="empty">Your cart is empty</div>
    <% } else { %>

      <% let total = 0; %>

      <table>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>

        <% cart.forEach(item => { total += item.price * item.qty; %>
          <tr>
            <td><%= item.name %></td>
            <td>₹ <%= item.price %></td>
            <td><%= item.qty %></td>
            <td class="actions">
              <a href="/add-to-cart/<%= item._id %>" class="plus">+</a>
              <a href="/cart-decrease/<%= item._id %>" class="minus">-</a>
              <a href="/cart-remove/<%= item._id %>" class="remove">Remove</a>
            </td>
          </tr>
        <% }) %>
      </table>

      <div class="summary">
        <div class="total">Total Amount: ₹ <%= total %></div>
        <a href="/product" class="back">Continue Shopping</a>
      </div>

    <% } %>

  </div>

</body>
</html>
